<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
    />

    <ImageView
            android:id="@+id/centerflower"
            android:src="@drawable/flower"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/flowerAndText"
    >

        <ImageView
                android:id="@+id/logo_icon"
                android:layout_width="55dp"
                android:layout_height="47dp"
                android:src="@drawable/flower"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.7"
                app:layout_constraintHorizontal_bias="0.31"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pavathma"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/logo_icon"
                app:layout_constraintVertical_bias="0.7"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold|italic"
                android:fontFamily="serif"/>

        <!-- <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Experts in IoT-Driven Solutions for Comprehensive Greenhouse Automation and Control"
                  android:textSize="19sp"
                  android:id="@+id/phase"
                  android:textColor="#F4F1F1"
                  android:fontFamily="sans-serif"

                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:textAlignment="center"
                  app:layout_constraintVertical_bias="0.78"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="1.0"/> -->


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="&#8220;Tradition shapes our roots, Technology fuels our growth&#8221;"
                  android:textSize="21sp"
                  android:id="@+id/word"
                  android:textColor="#F4F1F1"
                  android:fontFamily="sans-serif-black"

                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:textAlignment="center"
                  app:layout_constraintVertical_bias="0.84"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="1.0"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.92">

            <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/dot_shape"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/white"/>

            <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/dot_shape"/>


            <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/white"/>

            <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/dot_shape"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Let's Get You to the"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"

                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="19dp"
        />

        <TextView
                android:id="@+id/login"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/login_background"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="19dp"
        />

        <!--         android:background="@drawable/state_list" -->

    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>
